{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mosberg.github.io/schemas/textures/common.schema.json",
  "title": "Common Schema Definitions",
  "description": "Common schema definitions shared across texture-related schemas.",
  "type": "object",
  "$defs": {
    "snakeId": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_]{0,63}$",
      "description": "Lowercase snake_case identifier."
    },
    "nonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "texturePngPath": {
      "type": "string",
      "pattern": "^textures/[A-Za-z0-9/._-]+\\.png$",
      "description": "Textures path (textures/), including .png."
    },
    "hexColor": {
      "type": "string",
      "pattern": "^#[0-9A-Fa-f]{6}([0-9A-Fa-f]{2})?$",
      "description": "Hex color #RRGGBB or #RRGGBBAA."
    },
    "jsonObject": {
      "type": "object",
      "additionalProperties": true,
      "description": "Arbitrary JSON object."
    },
    "materialId": {
      "type": "string",
      "description": "Material category.",
      "enum": ["glass", "metal", "wood"]
    }
  }
}
