{
  // Python venv
  "python.defaultInterpreterPath": "${workspaceFolder}\\.btg\\Scripts\\python.exe",
  "code-runner.executorMap": {
    "python": "\"${workspaceFolder}\\.btg\\Scripts\\python.exe\" -u"
  },

  // Ignore venv noise
  "search.exclude": { "**/.btg": true },
  "files.watcherExclude": { "**/.btg/**": true },

  // JSON Schema mappings (workspace-relative is supported here). [web:58]
  "json.schemas": [
    {
      "fileMatch": ["schemas/common.schema.json"],
      "url": "./schemas/common.schema.json"
    },
    {
      "fileMatch": ["schemas/texture-palettes.schema.json"],
      "url": "./schemas/texture-palettes.schema.json"
    },
    {
      "fileMatch": ["palettes/**/*.texture-palettes.json"],
      "url": "./schemas/texture-palettes.schema.json"
    }
  ],

  // =========================
  // Copilot Chat: workspace context (project-specific)
  // =========================
  "github.copilot.chat.workspace.enableFullWorkspace": true,
  "github.copilot.chat.workspace.enableCodeSearch": true,
  "github.copilot.chat.workspace.enableEmbeddingsSearch": true,
  "github.copilot.chat.workspace.maxLocalIndexSize": 150000,

  // Optional: tuned commit/PR text generation
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use Conventional Commits. Mention schema version bumps explicitly."
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "text": "Include: summary, behavior changes, schema changes, and how to test."
    }
  ]
}
